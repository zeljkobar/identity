@{
    ViewData["Title"] = "Home Page";
}

@model AssignmentIdentity.ViewModels.CarListViewModel
<h2>Spisak automobila koji su na prodaju</h2>

<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="card">
                <img src="/img/@car.Fotografija" alt="@car.Fotografija" class="img-thumbnail" style="height:200px"/>

                <div class="card-body">

                    <h3>@car.Cijena.ToString("c")</h3>
                    <h4> @car.Karoserija</h4>
                    <h4>@car.Gorivo</h4>
                    <h3>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@car.Id">@car.Marka @car.Model</a>
                    </h3>
                    <p>@car.Opis</p>
                    
                </div>

            </div>
        </div>

    }
</div>